<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.joythakur.jgssakmtadmin.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.joythakur.jgssakmtadmin.MainActivity"
        android:label="app_bar_main"
        tools:layout="@layout/app_bar_main" />
    <activity
        android:id="@+id/blogActivity"
        android:name="com.joythakur.jgssakmtadmin.BlogActivity"
        android:label="app_bar_blog"
        tools:layout="@layout/app_bar_blog" />
    <activity
        android:id="@+id/eventActivity"
        android:name="com.joythakur.jgssakmtadmin.EventActivity"
        android:label="app_bar_event"
        tools:layout="@layout/app_bar_event" />
    <activity
        android:id="@+id/pageActivity"
        android:name="com.joythakur.jgssakmtadmin.PageActivity"
        android:label="app_bar_page"
        tools:layout="@layout/app_bar_page" />
</navigation>